 
<div class="form-panel">
	<h4 class="mb">
		<i class="fa fa-plus-square-o"></i>
		{{ form_title|default('  Ajouter un utilisateur') }}
	</h4>

	{{ form_start(form, {'attr': {'class': 'form-horizontal style-form'}}) }}
     
	<div class="col-sm-2 col-sm-2 control-label"></div>
	<div class="col-sm-8">
		{% if not form.vars.valid %}
			<ul class="alert-danger">
				{% for child in form.children %}
					{% if child.vars.errors is defined %}
						{% for error in child.vars.errors %}
							<li>{{ error.message }}</li>
						{% endfor %}
					{% endif %}
				{% endfor %}
			</ul>
		{% endif %}
	</div>


	<div class="form-group">
		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				{{ form_label(form.username) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-6">
				{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
			 
			</div>
		</div>
	</div>
	
	<div class="form-group">
		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				{{ form_label(form.password.first) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group col-sm-6">
			<label class="col-sm-5 col-sm-5 control-label">
				{{ form_label(form.password.second) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				{{ form_label(form.firstname) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group col-sm-6">
			<label class="col-sm-5 col-sm-5 control-label">
				{{ form_label(form.lastname ) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
	</div>

	<div class="form-group">

		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				{{ form_label(form.embuchAt) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.embuchAt, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group col-sm-6">
			<label class="col-sm-5 col-sm-5 control-label">
				{{ form_label(form.remuneration) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.remuneration, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
	</div>
	
	<div class="form-group">

		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				Les Equipes
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.teams, {'attr': {'class': 'form-control'}}) }}
				<span class="help-block">Veuillez s'il vous plaît choisir l'équipe qui fait parti a cet utilisateur.</span>
			</div>
			<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#AddGroupeModal">+</a>
		</div>

		<div class="form-group col-sm-6">
			<label class="col-sm-5 col-sm-5 control-label">
				Les Produits
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.products, {'attr': {'class': 'form-control selectchoice'}}) }}
				<span class="help-block">Veuillez s'il vous plaît choisir l'équipe qui fait parti a cet utilisateur.</span>
			</div>
			<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#AddProductModal">+</a>
		</div>

	</div>

	<div class="form-group">
		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				Nom de fonction
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.fonctions, {'attr': {'class': 'form-control selectchoice'}}) }}
				<span class="help-block">Veuillez s'il vous plaît choisir le(s) fonction(s) qui a associés a cet utilisateur.</span>
			</div>
			<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#AddFonctionModal">+</a>
		</div>


		<div class="form-group col-sm-6">
			<label class="col-sm-5 col-sm-5 control-label">
				Les Permissions
				<span class="text-danger">*</span>
			</label>

			<div class="col-sm-5">
				{{ form_widget(form.roles, {'attr': {'class': 'form-control selectchoice'}}) }}
				<span class="help-block">Veuillez s'il vous plaît choisir le(s) permission(s) qui reflet les droits a associés a cet utilisateur.</span>
			</div>

		</div>
	</div>

	<div class="form-group">

		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				{{ form_label(form.status) }}

			</label>
			<div class="col-sm-5">
				{% for child in form.status %}
					<div class="form-check form-switch">

						{{- form_widget(child) -}}
						{{- form_label(child, null) -}}
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="form-group col-sm-6">
			<label class="col-sm-5 col-sm-5 control-label">
				{{ form_label(form.gender) }}
				<span class="text-danger"></span>
			</label>
			<div class="col-sm-5">
				{% for child in form.gender %}
					<div class="radio-inline">
						{{- form_widget(child) -}}
						{{- form_label(child, null) -}}
					</div>
				{% endfor %}
			</div>
		</div>

	</div>
	


	<div class="form-group  ">
			<div class="col-lg-offset-5 col-lg-12">
				<button class="btn btn-info">{{ button_label|default('Ajouter') }}</button>
			</div>
	</div>

	<div class="form-group  ">
			<div class="col-lg-offset-5 col-lg-12">
				<button class="btn btn-theme" value="back" onclick="history.go(-1)">Retour</button>
			</div>
	</div>


		{{ form_rest(form) }}
		{{ form_end(form) }}

	 
</div>


{# # AddGroupeModal # #}
<div class="modal fade" id="AddGroupeModal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header modal-header-info">
				<h3 class="modal-title" id="exampleModalLabel">
					<i class="fa fa-plus-square-o"></i>
					Ajouter une equipe
				</h3>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">×</span>
				</button>
			</div>

			<div class="modal-body">
				<div class="form-horizontal style-form">
					<div class="form-group">
						<div class="col-sm-3 control-label"></div>
						<div class="col-sm-9">
							<ul id="saveform_errList"></ul>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label">
							Equipe
							<span class="text-danger">*</span>
						</label>
						<div class="col-sm-9">
							<input type="text" id="team_name" name="team[name]" required="required" placeholder="Merci de saisir le nom de l'équipe" class="name form-control">
						</div>
					</div>


					<div class="form-group">
						<label class="col-sm-3 control-label">
							Description
							<span class="text-danger"></span>
						</label>
						<div class="col-sm-9">
							<input type="text" id="team_description" name="team[description]" required="required" placeholder="Merci de saisir la description d'équipe" class="description form-control">
						</div>
					</div>

				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
				<button type="button" class="btn btn-primary team_new">Ajouter</button>
			</div>
		</div>
	</div>
</div>
 
 
{# # END- AddGoupeModal # #}

