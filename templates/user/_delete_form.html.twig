<form method="post" class="form-inline"
      action="{{ path('user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer {{ user.firstname ~ " " ~ user.lastname }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger btn-xs" style="margin-left: 5px;">
        {{ form_title|default('Supprimer')|raw }}
    </button>
</form>