{% extends 'base.html.twig' %}

{% block title %}Team index
{% endblock %}

{% block body %}
	<div class="container">
		{% for label,  messages in app.flashes  %}
			<div class="container">
				<div class="alert alert-{{ label }}">
					{% for message in messages %}
						{{ message | raw }}
					{% endfor %}

				</div>
			</div>
		{% endfor %}
		<section class="content-header">
			<h1>
				Equipes
				<small>Gestion</small>
			</h1>
			<ol class="breadcrumb">
				<li>
					<a href="{{ path('dashboard') }}">
						<i class="fa fa-dashboard"></i>
						Tableau de bord</a>
				</li>
				<li class="active">
					<a href="{{ path('app_team_index') }}">
						<i class="fa fa-object-fonction"></i>
						Tous les équipes</a>
				</li>
			</ol>
			<br>
			<a href="{{ path('app_team_new') }}" class="btn btn-primary">Ajouter une equipe</a>
		</section>

		<div class="row mt">
			<div class="col-lg-12">
				<div class="content-panel">
					<table class="table table-striped table-advance table-hover">
						<div class="row">
							<div class="col-xs-8">
								<h4>
									<i class="fa fa-list-ul"></i>
									liste des équipes
								</h4>
							</div>
							<div
								class="col-xs-4" style="float: right !important;  margin-right: 5px;">
								<div class="input-group">
																		{% include 'team/_search_form.html.twig' with {search_form: search_form} only %}
																	</div>
							</div>
						</div>
						<hr>


						<table class="table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Name</th>
									{# <th>Produits</th> #}
									<th>User</th>
									<th>Description</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for team in teams %}
									<tr>
										<td>{{ team.id }}</td>
										<td>{{ team.name }}</td>
										
											{# <td>{% if team.products is not empty %}
													{% for product in team.products %}
														{{ product }}<br>
													{% endfor %}
												{% else %}
													Aucun
												{% endif %}</td> #}
                                        <td>
										 {% for user in team.users %}
											{{  user  }} <br>
										{% endfor %}
										 
										
										</td>
										<td>{{ team.description }}</td>

										  <td class="btn-toolbar">
											 
											<a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-primary btn-xs"> <i class="fa fa-pencil"></i></a>
															
															{% set form_title = '<i class="fa fa-trash-o"></i>' %}
																{{ include('team/_delete_form.html.twig', {
																	'form_title': form_title}) }}
										  </td>
									</tr>
								{% else %}
									<tr>
										<td colspan="4">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
							<tfoot>
							<tr>
								<td colspan="7" style="text-align:right;">
									{{ knp_pagination_render(teams, 'pagination.html.twig') }}
								</td>
							</tr>
						</tfoot>
						</table>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
