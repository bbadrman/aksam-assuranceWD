<div class="form-panel">
	<h4 class="mb">
		<i class="fa fa-plus-square-o"></i>
		{{ form_title|default('Ajouter Equipe') }}
	</h4>

<div class="form-group"> 
{{ form_start(form, {'attr': {'class': 'form-horizontal style-form'}}) }}

<div class="form-group">
		<label class="col-sm-2 col-sm-2 control-label">
			{{ form_label(form.name) }}
			<span class="text-danger">*</span>
		</label>
		<div class="col-sm-10">
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 col-sm-2 control-label">
			{{ form_label(form.users) }}
			<span class="text-danger"></span>
		</label>
		<div class="col-sm-10">
			{{ form_widget(form.users, {'attr': {'class': 'form-control' }}) }}
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 col-sm-2 control-label">
			{{ form_label(form.description) }}
			<span class="text-danger"></span>
		</label>
		<div class="col-sm-10">
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>


   <div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<button class="btn btn-theme">{{ button_label|default('Ajouter') }}</button>
		</div>
	</div>
     {{ form_rest(form) }}
{{ form_end(form) }}
</div>
</div>
 