<form method="post" class="form-inline"
      action="{{ path('app_product_delete', {'id': product.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer {{ product.name }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger btn-xs" style="margin-left: 5px;">
        {{ form_title|default('Supprimer')|raw }}
    </button>
</form>
 
