<form method="post" class="form-inline"
action="{{ path('client_delete', {'id': client.id}) }}" 
onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer {{ client.firstname }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="btn btn-danger btn-xs" style="margin-left: 5px;">
        {{ form_title|default('Supprimer')|raw }}
    </button>
</form>

